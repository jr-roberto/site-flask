{
    "version": 2,
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/:1",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py"
    },
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": { "python": "3.8" }
        }
    ]
}